{
    "openapi": "3.0.1",
    "info": {
        "title": "DQT CRM API",
        "description": "",
        "version": "v2"
    },
    "servers": [
        {
          "url": "https://__dynamics_api_host__/api/data/v9.2"
        }
    ],
    "paths": {
        "/teachers": {
            "get": {
                "summary": "Teachers",
                "description": "Get all teachers not allowed, must provide an trn and look for an individual teacher",
                "operationId": "teachers",
                "responses": {
                    "403": {
                        "description": "The server understood the request but refuses to authorize it",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "429": {
                        "description": "Too many requests made try again later",
                        "headers": {
                            "retry-after": {
                                "description": "Amount of time in seconds to wait before trying again",
                                "schema": {
                                    "type": "string"
                                }
                            }
                        },
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/teachers/{trn}": {
            "get": {
                "summary": "Teacher",
                "description": "Get an individual teacher by their trn",
                "operationId": "teacher",
                "parameters": [{
                    "name": "trn",
                    "in": "path",
                    "description": "Teacher Reference Number e.g. 2559173",
                    "required": true,
                    "schema": {
                        "type": "integer"
                    }
                }, {
                    "name": "nino",
                    "in": "query",
                    "description": "National Insurance number - used if trn does not  e.g. A6N430J75",
                    "schema": {
                        "type": "string"
                    }
                }],
                "responses": {
                    "200": {
                        "description": "A teacher",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Teacher"
                                },
                                "example": {
                                    "trn": "1234567",
                                    "ni_number": "1234AB12A",
                                    "name": "First Last",
                                    "dob": "1990-01-20T00:00:00.0000000+00:00",
                                    "active_alert": false,
                                    "status": 0,
                                    "qts_award_date": "2015-07-20T23:00:00.0000000+00:00",
                                    "qts_status": 0,
                                    "teacher_status": "Qualified Teacher (trained)",
                                    "initial_teacher_training": {
                                        "status": 0,
                                        "type": 389040004,
                                        "start_date": "2017-08-20T23:00:00.0000000+00:00",
                                        "result": 389040000,
                                        "subject1Code": "R100",
                                        "subject2Code": "R200",
                                        "subject3Code": "R400",
                                        "qualification_name": "Postgraduate Certificate in Education"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "The specified resource was not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "429": {
                        "description": "Too many requests made try again later",
                        "headers": {
                            "retry-after": {
                                "description": "Amount of time in seconds to wait before trying again",
                                "schema": {
                                    "type": "string"
                                }
                            }
                        },
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/WhoAmI": {
            "get": {
                "summary": "WhoAmI",
                "description": "Test url to ensure auth is functioning",
                "operationId": "WhoAmI",
                "responses": {
                    "200": {
                        "description": "null"
                    },
                    "429": {
                        "description": "Too many requests made try again later",
                        "headers": {
                            "retry-after": {
                                "description": "Amount of time in seconds to wait before trying again",
                                "schema": {
                                    "type": "string"
                                }
                            }
                        },
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/heart-beat": {
            "get": {
                "summary": "heart-beat",
                "description": "Test url to ensure eapim is up",
                "operationId": "heart-beat",
                "responses": {
                    "200": {
                        "description": "null"
                    },
                    "429": {
                        "description": "Too many requests made try again later",
                        "headers": {
                            "retry-after": {
                                "description": "Amount of time in seconds to wait before trying again",
                                "schema": {
                                    "type": "string"
                                }
                            }
                        },
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Error": {
                "required": ["statusCode", "message"],
                "type": "object",
                "properties": {
                    "statusCode": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    }
                }
            },
            "Teacher": {
                "type": "object",
                "properties": {
                    "trn": {
                        "type": "string"
                    },
                    "ni_number": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "dob": {
                        "type": "string"
                    },
                    "active_alert": {
                        "type": "boolean"
                    },
                    "status": {
                        "type": "integer"
                    },
                    "qts_award_date": {
                        "type": "string"
                    },
                    "qts_status": {
                        "type": "integer"
                    },
                    "teacher_status": {
                        "type": "string"
                    },
                    "initial_teacher_training": {
                        "type": "object",
                        "properties": {
                            "status": {
                                "type": "integer"
                            },
                            "type": {
                                "type": "integer"
                            },
                            "start_date": {
                                "type": "string"
                            },
                            "result": {
                                "type": "integer"
                            },
                            "subject1Code": {
                                "type": "string"
                            },
                            "subject2Code": {
                                "type": "string"
                            },
                            "subject3Code": {
                                "type": "string"
                            },
                            "qualification_name": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "securitySchemes": {
            "apiKeyHeader": {
                "type": "apiKey",
                "name": "Ocp-Apim-Subscription-Key",
                "in": "header"
            },
            "apiKeyQuery": {
                "type": "apiKey",
                "name": "subscription-key",
                "in": "query"
            }
        }
    },
    "security": [{
        "apiKeyHeader": []
    }, {
        "apiKeyQuery": []
    }]
}
